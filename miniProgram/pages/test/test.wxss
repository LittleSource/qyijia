.store-box {
    margin-top: 20px;
}

.item-box {
    display: flex;
    flex-direction: column;
    background-color: #ffffff;
}

.top-box {
    display: flex;
    flex-direction: row;
}

.left {
    margin: 0 20rpx;
}

.left image {
    width: 120rpx;
    height: 120rpx;
    border-radius: 10rpx;
}

.right {
    flex: 1;
}

.tit {
    font-size: 34rpx;
    font-weight: bold;
    color: #333333;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.justify-content {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.row {
    font-size: 30rpx;
    color: #999999;
    margin-top: 16rpx;
}

.row-left,
.row-right {
    display: flex;
    flex-direction: row;
    margin-right: 20rpx;
}

.t1 {}

.t2 {
    margin-left: 30rpx;
}

tui-icon {
    margin-right: 4rpx;
}

.bottom-box {
    height: 250rpx;
}

.bottom-box-container {
    margin: 12rpx 0 0;
    white-space: nowrap;
}

.bottom-box-container:first-child {
    margin-left: 20rpx;
}

.goods-title {
    font-size: 28rpx;
    font-weight: 600;
    color: #333333;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.goods-box {
    width: 150rpx;
    margin-right: 20rpx;
    display: inline-block;
}

.img-box {
    position: relative;
    background-color: #f1f1f1;
}

.img-box image {
    width: 150rpx;
    height: 150rpx;
    border-radius: 10rpx;
}

.tag {
    position: absolute;
    bottom: 0;
    left: 0;
    background-color: #FF5722;
    color: #ffffff;
    padding: 3rpx 5rpx;
    box-sizing: border-box;
    font-size: 20rpx;
    border-radius: 8rpx;
}

.price-box {
    margin-top: 0rpx;
}

.txt1 {
    font-size: 30rpx;
    color: #FF5722;
}

.txt2 {
    font-size: 32rpx;
    color: #FF5722;
}

.txt3 {
    margin-left: 6rpx;
    font-size: 26rpx;
    color: #bbbbbb;
    text-decoration: line-through;
}

.item-box:last-child {
    border-bottom: 0;
}