.tui-userinfo-box {
    color: #333;
}

.tui-list-cell {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 30rpx;
    font-size: 30rpx;
    box-sizing: border-box;
    border-bottom: 2rpx dashed #eee;
}

.tui-pr30 {
    padding-right: 30rpx;
}

.tui-avatar {
    width: 100rpx;
    height: 100rpx;
    display: block;
    border-radius: 50rpx;
    overflow: hidden;
}

.tui-content {
    font-size: 26rpx;
    color: #666;
}

.login-out {
    margin-top: 20rpx;
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    padding: 10rpx 20rpx;
    box-sizing: border-box;
}

.tui-modal-custom {
    text-align: center;
}

.tui-modal-custom-text {
    font-size: 30rpx;
    color: #333;
    padding: 20rpx 0;
}

.tui-prompt-title {
    padding-bottom: 20rpx;
    font-size: 34rpx;
}

.tui-input {
    margin: 30rpx 40rpx;
    border-bottom: 1rpx solid #e6e6e6;
    padding-bottom: 20rpx;
    font-size: 32rpx;
}