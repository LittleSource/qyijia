<view class="tui-addr-box">
	<form report-submit="true">
		<tui-list-cell hover="{{false}}" padding="0">
			<view class="tui-line-cell">
				<view class="tui-title">联系人:</view>
				<input placeholder-class="tui-phcolor" class="tui-input" name="name" placeholder="请输入联系人姓名" maxlength="20" type="text" />
				<radio-group bindchange="changeGender">
					<radio class="radio1" checked color="#E41F19" value="1">先生</radio>
					<radio class="radio2" color="#E41F19" value="2">女士</radio>
				</radio-group>
			</view>
		</tui-list-cell>
		<tui-list-cell hover="{{false}}" padding="0">
			<view class="tui-line-cell">
				<view class="tui-title">手机号:</view>
				<input placeholder-class="tui-phcolor" class="tui-input" name="mobile" placeholder="请输入手机号码" maxlength="11" type="number" />
			</view>
		</tui-list-cell>
		<tui-list-cell arrow="{{true}}" padding="0">
			<view class="tui-line-cell" bindtap="chooseAddress">
				<view class="tui-title">
					<text class="tui-title-city-text">收货地址:</text>
				</view>
				<input placeholder-class="tui-phcolor" class="tui-input" disabled name="city" placeholder="请点击选择地址" type="text" />
			</view>
		</tui-list-cell>
		<tui-list-cell hover="{{false}}" padding="0">
			<view class="tui-line-cell">
				<view class="tui-title">门牌号:</view>
				<input placeholder-class="tui-phcolor" class="tui-input" name="address" placeholder="请输入详细的收货地址" maxlength="50" type="text" />
			</view>
		</tui-list-cell>
		<tui-list-cell hover="{{false}}" padding="0">
			<view class="tui-line-cell">
				<view class="tui-cell-title">标签</view>
				<view class="tui-addr-label">
					<text wx:for="{{typeList}}" wx:key="index" class="tui-label-item {{index==currentTypeIndex?'tui-label-active':''}}" bindtap="changeType" data-index="{{index}}">{{item}}</text>
				</view>
			</view>
		</tui-list-cell>

		<!-- 默认地址 -->
		<tui-list-cell hover="{{false}}" padding="0">
			<view class="tui-swipe-cell">
				<view>设为默认地址</view>
				<switch checked color="#E41F19" class="tui-switch-small" />
			</view>
		</tui-list-cell>
		<!-- 保存地址 -->
		<view class="tui-addr-save">
			<tui-button type="danger" height="88rpx">保存地址</tui-button>
		</view>
		<view class="tui-del">
			<tui-button type="gray" height="88rpx">删除地址</tui-button>
		</view>
	</form>
</view>